apiVersion: apps/v1
kind: Deployment
metadata:
  name: auth-svc-deployment
  labels:
    app: auth-svc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: auth-svc
  template:
    metadata:
      labels:
        app: auth-svc
    spec:
      containers:
        - name: auth-svc
          image: {{ .DOCKER_REGISTRY }}/auth-svc:{{ .VERSION }}
          env:
          - name: SPRING.DATA.MONGODB.URI
            value: mongodb+srv://{{ .DB_USERNAME }}:{{ .DB_PASSWORD }}@{{ .DB_HOSTS }}/test?ssl\=true&authSource\=admin
      imagePullSecrets:
        - name: regcred
---
apiVersion: v1
kind: Service
metadata:
  name: auth-svc-service
spec:
  selector:
    app: auth-svc
  ports:
  - protocol: TCP
    port: 80
    targetPort: 8080
  type: LoadBalancer